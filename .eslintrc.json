{
  "parser": "babel-eslint",
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "env": {
    "browser": true
  },
  "rules": {
    "import/no-unresolved": [2],
    "semi": [0],
    "space-before-function-paren": [0],
    "comma-dangle": [0]
  },
  "globals": {
    "phaser": true
  },
  "settings": {
    "import/core-modules": ["phaser", "pixi", "p2"]
  }
}
